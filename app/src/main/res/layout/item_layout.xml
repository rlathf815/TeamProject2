<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/eachItem"
    android:padding="2dp">

    <TextView
        android:id="@+id/textView_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center"
        android:hint="day"
        android:textColor="@color/darkest"
        android:textColorHint="@color/darkest"
        android:textSize="@dimen/day_textSize" />

    <TextView
        android:id="@+id/textView_schedule1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize = "10sp"
        android:textColor="@color/whiteLike"

        />
    <TextView
        android:id="@+id/textView_schedule2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize = "@dimen/schedule_textSize"
        android:textColor="@color/whiteLike"

        />

</LinearLayout>